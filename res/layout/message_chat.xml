<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout 
xmlns:android="http://schemas.android.com/apk/res/android"
android:id="@+id/messagepost"
android:layout_width="fill_parent"
android:layout_height="wrap_content"
android:background="@drawable/listbg"
>
    <LinearLayout
    android:id="@+id/iconholder"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content" 
	android:background="@drawable/photobg"
	android:layout_marginLeft="5sp"
	android:layout_marginTop="5sp"
	android:layout_marginRight="0sp"
	android:layout_marginBottom="5sp"
	android:layout_alignParentLeft="true"
    >
	    <ImageView 
	    android:id="@+id/icon"
	    android:layout_width="32sp"
	    android:layout_height="48sp" 
		android:adjustViewBounds="true"
		android:contentDescription="@string/content_description_photo"
	    />
    </LinearLayout>
   	<LinearLayout
    android:id="@+id/iconholder2"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content" 
	android:background="@drawable/photobg"
	android:layout_marginLeft="0sp"
	android:layout_marginTop="5sp"
	android:layout_marginRight="5sp"
	android:layout_marginBottom="5sp"
	android:layout_alignParentRight="true"
    >
	   	<ImageView 
	    android:id="@+id/icon2"
	    android:layout_width="32sp"
	    android:layout_height="48sp" 
		android:adjustViewBounds="true"
		android:contentDescription="@string/content_description_photo"
	    />
	</LinearLayout>
   	<TextView 
	style="?attr/listTextMainStyle"
	android:id="@+id/message"
	android:layout_width="fill_parent"
    android:layout_height="wrap_content"
	android:lineSpacingExtra="1dip"
	android:textColorLink="@color/link"
	android:padding="5sp"
	android:gravity="center_vertical"
	android:layout_toRightOf="@id/iconholder"
	android:layout_toLeftOf="@id/iconholder2"
    />
</RelativeLayout>
