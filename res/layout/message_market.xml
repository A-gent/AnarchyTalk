<?xml version="1.0" encoding="utf-8"?>
<LinearLayout 
xmlns:android="http://schemas.android.com/apk/res/android"
style="?attr/listItemStyle"
android:id="@+id/messagepost"
android:orientation="vertical"
android:layout_width="fill_parent"
android:layout_height="wrap_content"
>
	<RelativeLayout 
	style="?attr/listTextHeaderStyle"
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	android:orientation="horizontal"
	android:background="@color/listheader"
	android:padding="7sp"
	>
		<TextView
		style="?attr/listTextMainSmallStyle"
		android:id="@+id/from"
		android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
		android:textStyle="bold"
		android:maxLines="1"
		android:ellipsize="marquee"
		android:singleLine="true"
		android:layout_alignParentLeft="true"
		/>
		<TextView
		android:id="@+id/time"
		android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
		android:textColor="@color/subgrey"
		android:textStyle="normal"
		android:textSize="12sp"
		android:maxLines="1"
		android:ellipsize="marquee"
		android:singleLine="true"
		android:gravity="right"
		android:layout_alignParentRight="true"
    	style="@style/TextShadow"
		/>
	</RelativeLayout>
	<TextView 
	style="?attr/listTextMainStyle"
	android:id="@+id/message"
	android:layout_width="fill_parent"
    android:layout_height="wrap_content"
	android:lineSpacingExtra="2dip"
	android:textColorLink="@color/link"
	android:padding="7sp"
	android:background="@drawable/channel_button_background"
    />
</LinearLayout>
