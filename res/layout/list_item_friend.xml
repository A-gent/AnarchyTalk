<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout 
xmlns:android="http://schemas.android.com/apk/res/android"
style="?attr/listItemStyle"
android:layout_width="match_parent"
android:layout_height="wrap_content"
>
    <ImageView 
    android:id="@+id/icon"
    android:layout_width="32sp"
    android:layout_height="48sp" 
    android:layout_alignParentLeft="true"
	android:layout_centerVertical="true"
	android:adjustViewBounds="true"
	android:paddingRight="0sp"
	android:paddingLeft="0sp"
	android:paddingTop="0sp"
	android:paddingBottom="0sp"
	android:layout_marginBottom="2sp"
	android:layout_marginTop="2sp"
	android:contentDescription="@string/content_description_photo"
    />
    <ImageView 
    android:id="@+id/aospeak"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" 
    android:layout_alignParentRight="true"
	android:layout_centerVertical="true"
	android:adjustViewBounds="true"
	android:paddingRight="10sp"
	android:paddingLeft="0sp"
	android:paddingTop="0sp"
	android:paddingBottom="0sp"
	android:contentDescription="@string/content_description_aospeak"
    />
    <TextView
    style="?attr/listTextMainStyle"
	android:id="@+id/title"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content" 
	android:layout_toRightOf="@id/icon"
	android:layout_toLeftOf="@id/aospeak"
	android:paddingLeft="15sp"
	android:paddingRight="10sp"
	android:layout_centerVertical="true"
    />
</RelativeLayout>