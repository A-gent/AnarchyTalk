<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:weightSum="4"
    android:baselineAligned="false" 
    >
    
    <RelativeLayout        
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_weight="3"
        >
    
	    <RelativeLayout
	        android:id="@+id/inputbar"
	        android:layout_width="fill_parent"
	        android:layout_height="45sp"
	        android:layout_alignParentBottom="true"
	        android:background="@drawable/footbg"
	        android:padding="2sp" >
	
	        <ImageButton
	            android:id="@+id/channel"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_alignParentLeft="true"
	            android:layout_centerVertical="true"
	            android:background="@drawable/channel_button_background"
	            android:contentDescription="@string/set_channel"
	            android:gravity="center"
	            android:padding="2sp"
	            android:src="@drawable/ic_menu_allfriends" />
	
	        <EditText
	            android:id="@+id/input"
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:layout_alignParentRight="true"
	            android:layout_centerVertical="true"
	            android:layout_toRightOf="@id/channel"
	            android:hint="@string/disconnected"
	            android:inputType="text"
	            android:longClickable="true"
	            android:maxLines="1"
	            android:textAppearance="?android:attr/textAppearanceMedium" />
	    </RelativeLayout>
	        
	    <ListView
	        android:id="@+id/messagelist"
	        android:layout_width="fill_parent"
	        android:layout_height="fill_parent"
	        android:layout_above="@id/inputbar"
	        android:layout_alignParentLeft="true"
	        android:fastScrollEnabled="true"
	        android:scrollingCache="false"
	        android:stackFromBottom="true"
	        android:footerDividersEnabled="false"
	        android:transcriptMode="alwaysScroll" />

    </RelativeLayout>
    <RelativeLayout
    android:layout_width="0dp"
    android:layout_height="fill_parent"
    android:layout_weight="1"
	android:background="#55000000"
    >
	    <FrameLayout
	        android:id="@+id/friendsfragment"
	        android:layout_width="fill_parent"
	        android:layout_height="fill_parent"
	        android:layout_above="@id/inputbar" />
    </RelativeLayout>
</LinearLayout>